{
	"name": "defi-ls",
	"displayName": "Ethereum Language Support for DeFi",
	"description": "Ethereum DeFi support for NodeJS applications",
	"author": "Eric Lau",
	"license": "EPL-2.0",
	"version": "0.0.1",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/ericglau/defi-ls"
	},
	"publisher": "ericglau",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript",
		"onLanguage:typescriptreact",
		"onLanguage:javascriptreact",
		"onCommand:etherscan.show.url"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Ethereum DeFi",
			"properties": {
				"defi.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"defi.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the Ethereum DeFi language server."
				},
				"defi.infuraProjectId": {
					"scope": "window",
					"type": "string",
					"description": "Your Infura.io project ID"
				},
				"defi.infuraProjectSecret": {
					"scope": "window",
					"type": "string",
					"description": "Your Infura.io project secret"
				},
				"defi.amberdataApiKey": {
					"scope": "window",
					"type": "string",
					"description": "Your Amberdata.io API key"
				},
				"defi.cacheDuration": {
					"scope": "window",
					"type": "number",
					"description": "Maximum time in milliseconds to keep cached address and token data.",
					"default": 60000
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"mocha": "^6.2.2",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.8.3"
	}
}
